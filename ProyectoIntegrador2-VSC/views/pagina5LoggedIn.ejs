<% if (resenaPelicula.length !=0) { %>
  <ul>
    <h2 id="tituloBusqueda"> FILM REVIEW'S:</h2>
      <% for(let i= 0; i< resenaPelicula.length; i++) { %>
          <li id="tituloReviews">
              <p> "<%= resenaPelicula[i].texto_de_reseña%>" </p>
            </li>
            <li id="itemBusqueda">
              <p>REVIEWED BY: <a id="aBusqueda" href="/usuario/detalleUsuario/<%=resenaPelicula[i].usuario.id %>"> <%= resenaPelicula[i].usuario.nombre_de_usuario %></a> </p>
            </li>
            <li id="itemBusqueda">
              <p>LAST UPDATE: <%= resenaPelicula[i].fecha_de_actualizacion %></p>
            </li>
            <li id="itemBusqueda">
              <p>CREATION DATE: <%= resenaPelicula[i].fecha_de_creacion %></p>
            </li>
            <li id="itemBusqueda">
              <p ><%= resenaPelicula[i].usuario.nombre_de_usuario %>'S RATE: <%= resenaPelicula[i].puntaje_sobre_pelicula %></p>
            </li>
            <hr>
          <hr>
          <% } %>

  </ul>

  <% } else { %>
