<!-- Header-->

<main> 


    <div style="text-align: center;" class="uk-container"> 
        <div class="uk-section uk-section-large">
            <!-- Si no hizo ninguna pelicula, le sale un mensaje avisandole-->
            <% if (resultado.length == 0) { %>
                <h1 >YOU DON'T HAVE ANY REVIEWS YET</h1>
                <a id="aBusquedaa" href="/usuario/home"> GO BACK HOME</a>
            <%} else { %>
            <!-- Si hizo reseñas, le aparecen-->
                <h1 style="text-transform: uppercase;" class="uk-text-center"> 
                  <%= resultado[0].usuario.nombre_de_usuario %>'S REVIEWS: 
                </h1>

                <% for(let i=0; i < resultado.length; i++) { %>
                    <br>
                    <br>
                    <div style="background-color: #FFD740;" class="uk-card uk-card-secondary uk-margin">
                        <div class="uk-carde-badge uk-label uk-margin-bottom" style="color: white; background-color: black; font-family: 'Anton', sans-serif; font-size: 25px;"> 
                          RATING : <%= resultado[i].puntaje_sobre_pelicula %>
                        </div>
                        <br>
                        <div class="uk-card-body">
                            <h4 style="color: black; text-transform: uppercase; font-size: 60px; font-family: 'Anton', sans-serif;" class="uk-margin-top"> 
                              "<%= resultado[i].texto_de_reseña %>"
                            </h4>
                           </div>
                        <div class="uk-card-footer uk-flex uk-flex-between">
                            <a style= "color: green; font-family: 'Anton', sans-serif; font-size: 25px;" href="/usuario/reviews/edit/<%= resultado[i].id%>">EDIT</a>
                            <br>
                            <a style= "color: white; font-family: 'Anton', sans-serif; font-size: 25px;" class="uk-text-primary ups" href="/usuario/detalle?idPelicula=<%= resultado[i].id_pelicula %>"> GO TO MOVIE</a>
                            <br>
                            <a style= "color: red; font-family: 'Anton', sans-serif; font-size: 25px;" href="/usuario/reviews/delete/<%= resultado[i].id %>"> DELETE</a>
                        </div>
                    </div>

                <%}%>

            <%}%>
        </div>
    </div>
    <br>
    <br>


</main>

